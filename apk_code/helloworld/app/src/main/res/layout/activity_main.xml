<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="chiplua.example.helloworld.app.MainActivity">

    <TextView
        android:id="@+id/textForHello"
        android:text="TimeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textForWorld"
        android:text="CurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textForHello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textForWorld"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp"
        android:id="@+id/myTime"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_purple"
        android:shadowColor="@android:color/background_light"
        android:layout_gravity="bottom"
        android:id="@+id/timeButton"
        android:text="beginTest"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nextButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_purple"
        android:shadowColor="@android:color/background_light"
        android:layout_gravity="bottom"
        android:id="@+id/nextButton"
        android:text="Next"
        android:layout_alignTop="@+id/timeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
